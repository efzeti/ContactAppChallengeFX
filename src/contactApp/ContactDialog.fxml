<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="contactApp.ContactDialogController"
            prefHeight="250.0" prefWidth="300.0">
    <headerText>
        Provide new contact info
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="firstNameTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="lastNameTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneTextField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Notes:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="notesTextField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        </GridPane>
    </content>

</DialogPane>
